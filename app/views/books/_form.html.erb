<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cover, class: 'label' %>
    <%= show_cover(book, 400) unless book.new_record? %>
    <%= form.file_field :cover, class: 'file-input' %>
  </div>

  <div class="field">
    <%= form.label :title, class: 'label' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, class: 'label' %>
    <%= form.text_area :content, rows: '20' %>
  </div>

  <div class="field">
    <%= form.label :isbn, 'ISBN', class: 'label' %>
    <%= form.text_field :isbn, maxlength: '13' %>
  </div>

  <div class="field">
    <%= form.label :publish_date, class: 'label' %>
    <%= form.text_field :publish_date, data: {controller: 'datepicker', datepicker_target: 'dateInput' }%>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn' %>
  </div>
<% end %>
