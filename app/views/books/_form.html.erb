<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation"  >
      <ul class="list-group">
        <% book.errors.each do |error| %>
          <li class="list-group-item list-group-item-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= show_cover(book, 400) unless book.new_record? %>
  </div>
  <div class="field">
    <%= form.label :cover, class: 'form-label' %>
    <%= form.file_field :cover, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control w-100', placeholder: 'Title' %>
  </div>

  <div class="field">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, rows: '20', class: 'form-control', placeholder: 'Content' %>
  </div>

  <div class="field">
    <%= form.label :isbn, 'ISBN', class: 'form-label' %>
    <%= form.text_field :isbn, maxlength: '13', class: 'form-control', placeholder: 'ISBN' %>
  </div>

  <div class="field">
    <%= form.label :publish_date, class: 'form-label' %>
    <%= form.text_field :publish_date, data: {controller: 'datepicker', datepicker_target: 'dateInput' }, class: 'form-control', placeholder: 'Publish Date'%>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-warning' %>
  </div>
<% end %>