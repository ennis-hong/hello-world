<p id="notice"><%= notice %></p>
<table class="table-responsive">
  <thead>
    <tr>
      <th class="s_col text-center">Cover</th>
      <th class="text-center">Title</th>
      <th class="x_col text-center">Content</th>
      <th class="s_col text-center">ISBN</th>
      <th class="s_col text-center">Publish date</th>
      <th class="text-center" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= show_cover(book, 100) %></td>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publish_date %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-warning' %></td>
        <td><%= link_to 'Edit', edit_book_path(book) , class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-warning' %>
