<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="s_col">Cover</th>
      <th>Title</th>
      <th class="x_col">Content</th>
      <th class="s_col">ISBN</th>
      <th class="s_col">Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= show_cover(book, 100) %></td>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publish_date %></td>
        <td><%= link_to 'Show', book, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_book_path(book) , class: 'btn'%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn' %>
